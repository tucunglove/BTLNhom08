@model IEnumerable<BTL_nhom08.Models.VeXe>

@{
    ViewData["Title"] = "Index";
}

<h1>Trang chủ Vé xe</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenVe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenXe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenVe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenXe.TenXe_BienSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.MaNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.MaKhachHang)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaVe">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaVe">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaVe">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
