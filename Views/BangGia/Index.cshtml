@model IEnumerable<BTL_nhom08.Models.BangGia>

@{
    ViewData["Title"] = "Index";
}

<h1>Trang chủ Bảng giá</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<p>
    <a asp-action="Upload">Upload file</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GiaVe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GiaVe)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GiaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GiaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GiaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
